.page--contest_scoreboard
  .col--rank
    width: rem(60px)
    border-right: 1px solid $table-border-color

  .col--user
    min-width: rem(150px)

  .col--total_score, .col--total_time_str, .col--solved_problems
    width: rem(100px)
    text-align: center

  .col--problem_detail
    width: rem(100px)
    border-left: 1px solid $table-border-color
    text-align: center

  +mobile()
    .col--user
      width: auto

    .col--problem_detail
      display: none
