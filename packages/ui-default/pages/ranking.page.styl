    width: rem(65px)
    position: relative

  .col--user
    width: rem(280px)

  .col--rp
    width: rem(60px)
    text-align: right

  .col--detail
    width: rem(50px)
    text-align: center
  
  &[lang="en"]
    .col--detail
      width: rem(75px)

  .col--ac
    width: rem(50px)
    text-align: center
  
  &[lang="en"]
