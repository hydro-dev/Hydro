.page--home_security

  .sessionlist
    font-size: rem($font-size-secondary)

  .sessionlist__icon
    font-size: rem(30px)
    color: #888
    margin: rem(0 20px)

  .sessionlist__item
    margin: rem(10px 0)
    padding: rem(10px 0)
    border-bottom: 1px solid #DDD

    input
      margin: 0

  .sessionlist__current-session
    line-height: rem($form-control-height)
    color: green

  .autherlist, .platform-list
    font-size: rem($font-size-secondary)

  .autherlist__icon
    font-size: rem(30px)
    color: #888
    margin: rem(0 20px)

  .autherlist__item
    margin: rem(10px 0)
    padding: rem(10px 0)

    &:not(:last-child)
      border-bottom: 1px solid #DDD

    input
      margin: 0

  .platform-list__item
    margin: rem(6px 0)
    padding: rem(6px 0)

    &:not(:first-child)
      border-top: 1px solid #DDD
    
    .button
      margin: 0

    .media__left
      width: rem(48px)
      text-align: center

      svg
        width: rem(30px)
        height: rem(30px)
        color: #888
        fill: #888
        margin: rem(0 20px)

  +mobile()
    .sessionlist__item, .platform-list__item
      .media__left
        display: none

      .media__body, .media__right
        display: block
        padding: 0
        margin: 0
