{
    "name": "hydro-workspace",
    "private": true,
    "workspaces": [
        "packages/*",
        "framework/*",
        "plugins/*",
        "modules/*"
    ],
    "main": "package.json",
    "scripts": {
        "build": "node build/prepare.js && tsc -b --verbose",
        "build:installer": "esbuild ./install/install.js --minify --format=cjs --bundle --platform=node --external:readline/promises | gzip -9 | base64",
        "build:watch": "node build/prepare.js && tsc -b --watch",
        "build:ui": "node packages/ui-default/build --iconfont && node packages/ui-default/build",
        "build:ui:iconfont": "node packages/ui-default/build --iconfont",
        "build:ui:dev": "node packages/ui-default/build --iconfont && node --trace-deprecation packages/ui-default/build --dev",
        "build:ui:dev:https": "node packages/ui-default/build --iconfont && node --trace-deprecation packages/ui-default/build --dev --https",
        "build:ui:production": "cross-env-shell NODE_OPTIONS=--max_old_space_size=8192 \"node packages/ui-default/build --iconfont && node packages/ui-default/build --production\"",
        "build:ui:production:webpack": "cross-env NODE_OPTIONS=--max_old_space_size=8192 node packages/ui-default/build --production",
        "test": "node -r @hydrooj/register packages/common/tests/subtask.spec.ts && node test/entry.js",
        "benchmark": "cross-env BENCHMARK=true node test/entry.js",
        "oxlint": "cd framework/eslint-config && node -r @hydrooj/register build.ts && cd ../../ && oxlint --config framework/eslint-config/.oxlintrc.json",
        "lint": "eslint --flag v10_config_lookup_from_file packages plugins modules framework --ext .ts,.tsx,.jsx,.vue,.yaml,.yml --fix",
        "lint:ci": "eslint --flag v10_config_lookup_from_file packages plugins modules framework --ext .ts,.tsx,.jsx,.vue,.yaml,.yml --max-warnings=0",
        "debug": "node --trace-warnings --async-stack-traces --trace-deprecation packages/hydrooj/bin/hydrooj --debug --template",
        "start": "packages/hydrooj/bin/hydrooj.js",
        "postinstall": "node build/prepare.js",
        "gen-patch": "node -r @hydrooj/register build/gen-patch.ts",
        "hydrooj": "./node_modules/.bin/hydrooj"
    },
    "version": "1.0.0",
    "license": "AGPL-3.0-only",
    "devDependencies": {
        "@types/autocannon": "^7.12.7",
        "@types/chai": "^5.2.3",
        "@types/cross-spawn": "^6.0.6",
        "@types/node": "24.10.7",
        "@types/semver": "^7.7.1",
        "autocannon": "^8.0.0",
        "cac": "^6.7.14",
        "chai": "^6.2.2",
        "cross-env": "^10.1.0",
        "cross-spawn": "^7.0.6",
        "esbuild": "0.25.2",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-import-resolver-webpack": "^0.13.10",
        "fs-extra": "^11.3.3",
        "globals": "^16.5.0",
        "globby": "~14.0.2",
        "inspectpack": "^4.7.1",
        "mongodb-memory-server": "11.0.1",
        "nyc": "^17.1.0",
        "ora": "^9.1.0",
        "oxlint": "^1.41.0",
        "package-json": "^10.0.1",
        "semver": "^7.7.3",
        "simple-git": "^3.30.0",
        "supertest": "^7.2.2",
        "supports-hyperlinks": "^4.4.0",
        "typescript": "5.8.3",
        "wtfnode": "^0.10.1"
    },
    "resolutions": {
        "mongodb": "^7.0.0",
        "@types/express-serve-static-core": "patch:@types/express-serve-static-core@npm%3A4.19.6#~/.yarn/patches/@types-express-serve-static-core-npm-4.19.6-cc0017aaf4.patch"
    }
}
